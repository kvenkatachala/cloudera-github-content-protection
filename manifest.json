{
    "manifest_version": 3,
    "name": "Cloudera GitHub Content Protection",
    "version": "1.0",
    "description": "Block copying text and screenshots for Cloudera GitHub repositories.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
      "tabs",
      "activeTab",
      "scripting",
      "storage",
      "webNavigation",
      "declarativeNetRequest"
    ],
    "content_scripts": [
      {
        "matches": ["https://github.infra.cloudera.com/*"],
        "js": ["content-script.js"],
        "css": ["style.css"],
        "run_at": "document_start"
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
      }
    },
    "host_permissions": [
      "*://*/*"
    ]
}
  